                if (!data) {
                    alert("没有找到该固定资产，请检查输入的固定资产编号");
                }
                else {
                    if (data.Introduce!="已报废") {
                        $("#Str1").val(data.Str1);
                        $("#Str2").val(data.Str3);
                        $("#Gddh").val(data.Str4);
                    }
