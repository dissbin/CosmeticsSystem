@model DBA.Model.Topic
@{
    ViewBag.Title = "Create";
    Layout = null;
}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
    <script src="../../Scripts/jquery-1.7.1.min.js"></script>
        <script src="@Url.Content("~/Scripts/kindeditor/kindeditor.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/kindeditor/lang/zh_CN.js")" type="text/javascript"></script>
<link href="/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body class="add_test_img"  >

	<div class="place">
    <span>位置：</span>
    <ul class="placeul">
    <li><a href="#">首页</a></li>
    <li><a href="#">添加退货</a></li>
    </ul>
    </div>
    
    <div class="formbody">
    
    <div class="formtitle"><span>添加退货</span></div>
    <form method="post" action="/Topic/Edit">
    <ul class="forminfo">
         <li><label>原因</label>@Html.TextBoxFor(m => m.Title, new { @class = "dfinput" })</li>
           <li><label>化妆品编号</label>@Html.TextBoxFor(m => m.Category, new { @class = "dfinput" })</li>
         <li><label>客户联系方式</label>@Html.TextBoxFor(m => m.UserID, new { @class = "dfinput" })</li>
         <li><label>客户姓名</label>@Html.TextBoxFor(m => m.UserName, new { @class = "dfinput" })</li>
       <li><label>类型</label><select name="CategoryID" id="CategoryID">
           <option value="换货">换货</option>
            <option value="换货">退货</option>
                            </select></li>
          <li><label>备注</label>@Html.TextAreaFor(m => m.TopicContent, new { style = "width:700px;height:300px" })</li>
        <input type="hidden" value="正在处理" name="HTNum"/>
        @Html.HiddenFor(m=>m.ID)
            <li><label>&nbsp;</label><input name="" style="border:0;" type="submit" class="btn" value="确认提交"/></li>
        
    
    </ul>
    </form>
    
    </div>


</body>

</html>
<script type="text/ecmascript">
    $(function () {
        if ('@Model.ID' != "0") {
            $("#CategoryID").val('@Model.CategoryID');
        }
        var editor;
        KindEditor.ready(function (K) {
            editor = K.create('#TopicContent',
            {
                uploadJson: '/Scripts/kindeditor/asp.net/upload_json.ashx',
                fileManagerJson: '/Scripts/kindeditor/asp.net/file_manager_json.ashx',
                allowFileManager: true
            });
        });
    });
    </script>

