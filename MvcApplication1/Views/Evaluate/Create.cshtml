@model DBA.Model.Evaluate
@{
    ViewBag.Title = "Create";
    Layout = null;
}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
    <script src="../../Scripts/jquery-1.7.1.min.js"></script>
<link href="/Content/css/style.css" rel="stylesheet" type="text/css" />
     <link href="@Url.Content("~/Scripts/Uploadify/uploadify.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/Uploadify/jquery.uploadify.min.js")" type="text/javascript"></script>
</head>

<body class="add_test_img"  >

	<div class="place">
    <span>位置：</span>
    <ul class="placeul">
    <li><a href="#">首页</a></li>
    <li><a href="#">添加评分</a></li>
    </ul>
    </div>
    
    <div class="formbody">
    
    <div class="formtitle"><span>添加评分</span></div>
    <form method="post" action="/Evaluate/Edit">
    <ul class="forminfo">
               <li><label>年度</label>@Html.TextBoxFor(m => m.ND, new { @class = "dfinput" })</li>
           <li><label>月度</label>@Html.TextBoxFor(m => m.YD, new { @class = "dfinput" })</li>
       <li><label>分数</label>@Html.TextBoxFor(m => m.Score, new { @class = "dfinput" })</li>
         <li><label>上传</label>
               <input type="hidden" name="EUrl" id="EUrl" value="@Model.EUrl" class="txt_input" style="width:220px;height:23px;margin-bottom:0px;"/>
               <div style="padding-top:12px;padding-left:90px;">
                        <span class="explanation">
                            <button class="download" type="button" id="uploadify">
                                上传头像</button></span></div>
                    
         </li>
        @Html.HiddenFor(m=>m.ID)
          @Html.HiddenFor(m=>m.GHSID)
          @Html.HiddenFor(m=>m.GHS)
    <li><label>&nbsp;</label><input name="" style="border:0;" type="submit" class="btn" value="确认保存"/></li>
    </ul>
    </form>
    
    </div>


</body>

</html>
<script type="text/ecmascript">
    $(function () {

        setTimeout(function () {
            $('#uploadify').uploadify({
                'onInit': function () { //载入时触发，将flash设置到最小
                    $("#uploadify-queue").hide();
                },
                'multi': false,
                'fileSizeLimit': '512000KB',
                'width': 50,
                'height': 20,
                'buttonText': '上传',
                'removeCompleted': false,
                'swf': '/Scripts/uploadify/uploadify.swf',
                'uploader': '/Home/Upload',
                'onUploadSuccess': function (file, data, response) {
                    $("#ulAttachment").hide();
                    alert("上传成功！");
                    $("#EUrl").val(data);
                }
            });
        });
    });
</script>


